{
    "compilerOptions": {
        "lib": ["es5", "es6"],
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./build",
        "rootDir": "./src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "typeRoots": ["./node_modules/@types", "./src/types"]
    }
}
